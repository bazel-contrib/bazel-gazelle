load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "lib",
    srcs = ["lib.go"],
    _gazelle_imports = [],
    importpath = "example.com/repo/naming_convention/import_alias/lib",
    visibility = ["//visibility:public"],
)

alias(
    name = "go_default_library",
    actual = ":lib",
    deprecation = "Use :lib instead of :go_default_library.  Details about the new naming convention: https://github.com/bazelbuild/bazel-gazelle/pull/863",
    visibility = ["//visibility:public"],
)

go_test(
    name = "lib_test",
    srcs = ["lib_test.go"],
    _gazelle_imports = ["testing"],
    embed = [":lib"],
)
